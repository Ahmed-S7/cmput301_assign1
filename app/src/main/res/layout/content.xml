<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:padding="0dp">

    <TextView
        android:id="@+id/item_name_non_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/baloo_thambi_2"
        android:paddingStart="15dp"
        android:text="Name:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_title"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:fontFamily="@font/baloo_thambi_2"
        android:maxWidth="75dp"
        android:maxLines="3"
        android:paddingStart="15dp"
        android:text="Item:"
        android:textAlignment="viewStart"
        android:textColor="#050000"
        android:textColorLink="#0D0000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/baloo_thambi_2"
        android:paddingStart="15dp"
        android:text="Creator:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/creator_name"
        android:layout_width="133dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:fontFamily="@font/baloo_thambi_2"
        android:maxWidth="75dp"
        android:maxLines="3"
        android:paddingStart="15dp"
        android:text="Creator Name"
        android:textAlignment="viewStart"
        android:textColor="#040000"
        android:textColorLink="#070000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/baloo_thambi_2"
        android:paddingStart="15dp"
        android:text="Genre:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/genre"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:fontFamily="@font/baloo_thambi_2"
        android:maxWidth="95dp"
        android:maxLines="3"
        android:paddingStart="15dp"
        android:text="Genre"
        android:textColor="#000000"
        android:textColorLink="#070000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/baloo_thambi_2"
            android:paddingStart="15dp"
            android:text="Completed:"
            android:textSize="15sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/read_status"
            android:layout_width="28dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:backgroundTint="#B87575"
            android:clickable="false"
            android:focusable="false"
            android:layoutDirection="rtl"
            android:textColor="#090000"
            android:textColorLink="#040000"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>
